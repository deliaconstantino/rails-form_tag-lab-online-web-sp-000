<h3>Student Form</h3>

<%= form_tag students_path do %>
  <label>First Name:</label><br>
  <%= text_field_tag :'student[first_name]', :first_name, placeholder: (!@student.nil? ? @student.first_name : "") %><br>


  <label>Last Name:</label><br>
  <%= text_field_tag(:'student[last_name]', :last_name, placeholder: true) %><br>



  <%= submit_tag "Submit Student" %>
<% end %>
